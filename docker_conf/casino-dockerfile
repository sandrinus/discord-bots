FROM python:3.11-slim

WORKDIR /app

COPY casino-requirements.txt .

RUN pip install --no-cache-dir -r casino-requirements.txt

COPY main.py ../casino/
COPY slots.py ../casino/
COPY fundamentals.py ../casino/
COPY blackjack.py ../casino/
COPY wheel_of_fortune.py ../casino/

CMD ["python", "main.py"]
